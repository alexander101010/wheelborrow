<div class="form-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url( <%= image_path('form_image.jpg')%>);">
  <div class="container">
    <div class="form-header">
      <h2>Create a new tool</h2>
    </div>
    <div class="form-container">
      <div class="new-tool-form">
        <%= simple_form_for(@tool, method: :post) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :photo, as: :file %>
        <%= f.input :price, as: :range, collection: 1..100 %>
        <p id="slider_value">  </p>
        <%= f.input :category, collection: ["hand tools", "power tools", "gardening tools"] %>
        <%= f.submit "Add Tool", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>



