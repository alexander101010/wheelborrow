
<div class="form-header">
  <h1>Create a new tool</h1>
</div>


<div class="form-container">
  <div class="new-tool-form">
    <%= simple_form_for(@tool, method: :post) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file %>
    <%= f.input :price, as: :range, collection: 1..100 %>
    <p id="slider_value">  </p>
    <%= f.input :category, collection: ["hand tools", "power tools", "gardening tools"] %>
    <%= f.submit "Add Tool", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
