<div class="container-tool-show">

  <div class="card-tool-show">
    <% if @tool.photo.attached? %>
      <img src="<%= cl_image_path @tool.photo.key %>"/>
    <% end %>
  </div>
  <div class="card-tool-show-details">
    <div class="tool-name">
      <h2><%= @tool.name %></h2>
    </div>
    <div class="tool-desc">
      <p><%= @tool.description %></p>
    </div>
    <div class="tool-price-wrapper">
      <div class="tool-price">
        <h3>â‚¬<%= @tool.price %> / Day</h3>
      </div>
    </div>
    <div class="request-booking-btn-wrapper">
      <div class="request-booking-btn">
        <%= link_to 'Request Booking', new_tool_booking_path(@tool), class: "btn btn-flat" %>
      </div>
    </div>
  </div>
  <div class="card-tool-show-lender">
    <div class="lender-avatar-wrapper">
      <% if @tool.user.photo.attached? %>
        <img src="<%= cl_image_path @tool.user.photo.key %>" class="lender-avatar avatar-bordered" />
      <% end %>
    </div>
    <div class="lender-name">
      <h2><%= @tool.user.first_name %></h2>
    </div>
    <div class="lender-address">
      <p><%= @tool.user.address %></p>
    </div>
  </div>
  <div class="tool-map" id="map"
    style="width: 100%; height: 400px;"
    data-markers="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
