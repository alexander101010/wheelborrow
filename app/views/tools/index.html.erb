<h1>Tools</h1>
<p>Available tools:</p>


<div class="container">
  <div class="tool-cards"></div>
    <% @tools.each do |tool| %>
      <div class="card-tool">
        <% if tool.photo.attached? %>
        <img src="<%= cl_image_path tool.photo.key %>" />
        <% end %>
        <div class="card-tool-infos">
          <h2><%= tool.name %></h2>
          <p> <%= tool.description %> </p>
          <%= link_to 'Details', tool %>
        </div>
      </div>
    <% end %>
  </div>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
