<div class="tools-header">
  <h4>Available tools matching your search:</h4>
</div>

  <div class="tool-index-container">
    <div class="tool-cards">
      <% @tools.each do |tool| %>
      <%= link_to tool do %>
      <div class="card-tool">
        <% if tool.photo.attached? %>
        <img src="<%= cl_image_path tool.photo.key %>" />
        <% end %>
        <div class="card-tool-infos">
          <h2><%= tool.name %></h2>
          <p> <%= tool.description %> </p>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
    <div class="map-container">
      <div class="tool-map" id="map"
      style="width: 100%; height: 100%;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
<br>
<br>
  <div class="tool-categories">
    <%= link_to tools_path(tool:{ query: "gardening"}, location:{ query: ""}) do %>
    <div class="card-trip">
      <%= image_tag('garden-tool.jpg')%>
      <div class="card-trip-infos">
        <div>
          <h2>Garden tools</h2>
        </div>
      </div>
    </div>
    <% end %>

    <%= link_to tools_path(tool:{ query: "hand"}, location:{ query: ""}) do %>
    <div class="card-trip">
      <%= image_tag('hand-tool.jpg')%>
      <div class="card-trip-infos">
        <div>
          <h2>Hand tools</h2>
        </div>
      </div>
    </div>
    <% end %>

    <%= link_to tools_path(tool:{ query: "power"}, location:{ query: ""}) do %>
    <div class="card-trip">
      <%= image_tag('electrical-tool.jpg')%>
      <div class="card-trip-infos">
        <div>
          <h2>Power tools</h2>
        </div>
      </div>
    </div>
    <% end %>
  </div>

